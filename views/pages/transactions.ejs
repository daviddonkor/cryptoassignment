<!DOCTYPE html>
<html lang="en">

<head>
    <title>Crypto Currencies</title>
    <%- include("../layouts/head.ejs"); %>

    <style>
        .redbg{
  background:red;
  color:white;
}

.greenbg{
  background:green;
  color:white;
}
.coloredbg{
    width:20%;
}
    </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include("../layouts/sidebar.ejs"); %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include("../layouts/header.ejs"); %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                  

                    <!-- Content Row -->
                    <div class="row">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Time</th>
                                    <th>Currency</th>
                                    <th class="redbg coloredbg">Amount Purchased</th>
                                    <th class="greenbg coloredbg">Current Balance</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% transactions.forEach(function(row){

                                    d=new Date(row.time);
                                    %>
                                    <tr>
                                        <td><%= d.getDate() + '/' + (d.getMonth()+1) + '/' + d.getFullYear()+", "+d.getHours()+":"+d.getMinutes()+":"+d.getSeconds() %></td>
                                        <td><%= row.currency %></td>
                                        <td><%= row.amount_purchased %></td>
                                        <td><%= row.current_balance %></td>
                                    </tr>

                               <% }); %>

                            </tbody>
                        </table>
                </div>
                <!-- /.container-fluid -->

            </div>
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include("../layouts/footer.ejs"); %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>





</body>

</html>